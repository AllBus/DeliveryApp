<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.tytosoft.delivery">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".App"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<meta-data android:name="android.max_aspect" android:value="2.1" />
		<activity
			android:name=".MainActivity"
			android:screenOrientation="portrait"
		>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".CatalogActivity"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".ProductActivity"
			android:label="@string/title_activity_product"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme">
		</activity>
		<activity
			android:name=".ActivityCreateZakaz"
			android:screenOrientation="portrait"
			>
		</activity>
		<activity
			android:name=".ProfileActivity"
			android:label="@string/profileActivityTitle"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".KorzinaActivity"
			android:label="@string/titleKorzina"
			android:launchMode="singleTask"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".AboutActivity"
			android:label="@string/aboutActivityTitle"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".DetailActivity"
				  android:screenOrientation="portrait">
		</activity>
	</application>

</manifest>