<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/topLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	style="@style/CardClickable"
	>


	<RelativeLayout
		android:layout_width="match_parent"
		android:id="@+id/dataLayout"
		android:layout_height="110dp">
	<ImageView
		android:id="@+id/image"
		android:layout_width="110dp"
		android:layout_height="110dp"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		android:scaleType="centerCrop"
		/>

		<TextView
			android:id="@+id/discount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignEnd="@id/image"
			android:layout_alignRight="@id/image"
			android:layout_alignTop="@id/image"


			tools:text="-50%"
			style="@style/discount"

			/>


	<TextView

		android:id="@+id/name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_toRightOf="@+id/image"


		android:textSize="14sp"
		android:ellipsize="end"
		android:textStyle="bold"
		tools:text="Сеты с европейскими суши pltcm gpdaut ochen vkusno dajh"
		android:maxLines="2"
		/>

	<TextView
		android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_below="@id/name"
		android:layout_toRightOf="@+id/image"

		android:textSize="12sp"
		android:ellipsize="end"
		tools:text="Сеты с европейскими суши dljazakaza s korotkoi strochkoi texta kotorii zdes pomestitsja"
		android:maxLines="3"
		android:layout_above="@+id/countLabel"
		android:layout_toLeftOf="@+id/addToTashBtn"

		/>

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/addToTashBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"

		tools:text="1220 \u20bd"
		style="@style/AddProductButton"

		/>
		<TextView
			android:id="@+id/countLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_amount"
			android:drawablePadding="4dp"
			android:layout_toRightOf="@+id/image"
			android:layout_toLeftOf="@id/addToTashBtn"

			android:layout_alignBottom="@id/addToTashBtn"
			android:maxLines="1"
			android:textSize="12sp"
			android:gravity="center_vertical"
			android:paddingBottom="8dp"
			tools:text="48 шт. / 1100 гр. bolshe ne po"
			/>
		<TextView
			android:id="@+id/oldPrice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@id/addToTashBtn"
			android:layout_alignEnd="@id/addToTashBtn"
			android:paddingEnd="12dp"
			android:paddingRight="12dp"
			android:textSize="12sp"
			tools:text="126 \u20bd"
			/>
	</RelativeLayout>

</android.support.v7.widget.CardView>