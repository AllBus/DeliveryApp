<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<!--<item name="android:navigationBarColor">@color/colorPrimary</item>-->


	</style>

	<style name="CardClickable">
		<item name="android:foreground">?android:attr/selectableItemBackground</item>
		<item name="android:layout_margin">2dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="CreateZakazIndicator">
		<item name="android:layout_marginTop">@dimen/marginTopCreateZakazButton</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_marginBottom">16dp</item>
	</style>

	<style name="CreateZakazNextButton" parent="BorderButton">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_marginBottom">16dp</item>

	</style>

	<style name="Button" parent="Base.Widget.AppCompat.Button">
		<item name="android:textAllCaps">false</item>
		<item name="android:background">@drawable/color_btn</item>
		<item name="android:textColor">@color/color_btn_text</item>
		<item name="android:paddingStart">8dp</item>
		<item name="android:paddingEnd">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<!--<item name="android:buttonTint">@color/colorBtnTint</item>-->
	</style>

	<style name="BorderWhiteButton" parent="Base.Widget.AppCompat.Button">
		<item name="android:textAllCaps">false</item>
		<item name="android:background">@drawable/border_white_btn</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:paddingStart">8dp</item>
		<item name="android:paddingEnd">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<!--<item name="android:buttonTint">@color/colorBtnTint</item>-->
	</style>

	<style name="AddProductButton" parent="BorderWhiteButton">
		<item name="android:minHeight">40dp</item>
		<item name="android:textSize">14sp</item>

		<item name="android:drawablePadding">4dp</item>
		<item name="android:drawableLeft">@drawable/ic_tash</item>
	</style>


	<style name="BorderButton" parent="Base.Widget.AppCompat.Button">
		<item name="android:textAllCaps">false</item>
		<item name="android:background">@drawable/border_btn</item>
		<item name="android:textColor">@color/border_btn_text</item>
		<item name="android:paddingStart">8dp</item>
		<item name="android:paddingEnd">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
	</style>

	<style name="WhiteButton" parent="BorderButton">
		<item name="android:background">@drawable/white_btn</item>
		<item name="android:textColor">@color/white_btn_text</item>
	</style>

	<style name="upDownBtn">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:padding">4dp</item>
	</style>
	>

	<style name="createZakazCompleteText">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textSize">@dimen/textSizeCreateZakazComplete</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="profileText">
		<item name="android:layout_width">240dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">16dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_margin">8dp</item>
	</style>

	<style name="item_product_text">

		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">4dp</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="discount">
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
		<item name="android:background">@color/defaultPrimary</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/white</item>
	</style>


	<style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
		<item name="android:shadowDy">0</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowRadius">8</item>
		<item name="android:shadowColor">@android:color/black</item>
	</style>
</resources>
